<div>
  <% if @dog.user_id == current_user.id %>
    <h3> I own the dog</h3>
<div data-controller="edit-dog">
  <div class="dog-card" data-edit-dog-target='info'>
    <%= cl_image_tag @dog.photo.key, height: 300, width: 400, crop: :fill %>
    <h5>Name: <%= @dog.name %></h5>
    <h5>Breed: <%= @dog.breed %></h5>
    <h5>Size: <%= @dog.size %></h5>
    <h5>Age: <%= @dog.age %></h5>
    <h5>Description: <%= @dog.description %></h5>
    <h5>Gender: <%= @dog.gender %> </h5>
    <h5>Address: <%= @dog.address %></h5>
    <h5>Likes: <%=  @dog.likes %></h5>
  </div>
  <%= button_tag "Edit", class:"btn btn-primary", data: { action: "click->edit-dog#displayForm" } %>
  <%= simple_form_for @dog, html: { class: "#{'d-none' unless @dog.errors.any?}",  data: { edit_dog_target: 'form'} } do |f| %>
    <%= f.input :name %>
    <%= f.input :breed %>
    <%= f.input :size %>
    <%= f.input :age %>
    <%= f.input :description %>
    <%= f.input :gender %>
    <%= f.input :address %>
    <%= f.submit "Update dog", class: "btn btn-sm btn-primary btn-block mt-2" %>
  <% end %>
</div>
  <% else %>
  <%= cl_image_tag @dog.photo.key, height: 300, width: 400, crop: :fill %>
    <h5>Name: <%= @dog.name %></h5>
    <h5>Breed: <%= @dog.breed %></h5>
    <h5>Size: <%= @dog.size %></h5>
    <h5>Age: <%= @dog.age %></h5>
    <h5>Description: <%= @dog.description %></h5>
    <h5>Gender: <%= @dog.gender %> </h5>
    <h5>Address: <%= @dog.address %></h5>
    <h5>Likes: <%=  @dog.likes %></h5>
    <%= simple_form_for([@dog, @booking]) do |f| %>
          <%= f.input :start_date, as: :date, html5: true%>
          <%= f.input :end_date, as: :date, html5: true%>
          <%= f.submit class: "btn-flat btn-flat:hover" %>
    <% end %>
  <% end %>
</div>
