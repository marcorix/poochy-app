<div class="profile-wrapper">
  <div class="side-nav">
    <%= link_to user_profile_path(current_user)	do %>
    <i class="fas fa-user-circle fa-2x"></i>
    <% end %>
    <% if @user == current_user %>
      <%= link_to user_dashboard_path(current_user)	do %>
        <i class="fas fa-archive fa-2x"></i>
      <% end %>

        <i class="fas fa-heart fa-2x"></i>
        <i class="fas fa-comments fa-2x"></i>

    <% end %>
  </div>

  <%# BOTSRAP CARD %>
  <div class="bio-wrapper container">
    <div class="card m-3" style="max-width: 540px;">
      <div class="row g-0">
        <div class="col-md-4">
         <%= cl_image_tag @user.photo.key, height: 150, width: 150, crop: :fill, class: "rounded-circle m-3 border border-3"  %>
        </div>
        <div class="col-md-8">
         <div class="card-body">
            <h5 h5 class="card-title"><%= @user.first_name %> <%= @user.last_name %></h5>
            <p class="card-text">"<%= @user.description %>"</p>
            <p class="card-text"><small class="text-muted"><%= @user.email %></small></p>
         </div>
        </div>
      </div>
    </div>
  </div>

  <%# REVIEW FORM %>
  <div id="reviews">
    <% if @user.reviews.blank? %>
       <p>No reviews yet... <%= @user.first_name %></p>
    <% else %>
      <% @user.reviews.each do |review| %>
        <p id="review-<%= review.id %>"><%= review.content %></p>
        <p>Stars: <%= review.rating %></p>
        <hr>
      <% end %>
    <% end %>
  </div>

  <% if @user != current_user && @user.dogs.empty? %>
    <div class="container">
      <h1>Leave a review</h1>
      <div class="row">
        <div class="col-xs-4">
          <%= simple_form_for([@user, @review], remote: true) do |f| %>
            <%= f.input :content %>
            <%= f.input :rating, collection: (1..5).to_a, label: "Rate this Walker" %>
            <%= f.submit "Send your review" %>
          <% end %>
      </div>
    </div>
  <% end %>


</div>
